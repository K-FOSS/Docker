{
  "admin": {
    "disabled": true
  },
  "apps": {
    "http": {
      "http_port": 8080,
      "https_port": 8443,
      "servers": {
        "kristianjones.dev": {
          "listen": [":8443"],
          "routes": [
            {
              "match": [
                {
                  "host": ["*.kristianjones.dev"]
                }
              ],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [
                        {
                          "host": ["cabot.kristianjones.dev"]
                        }
                      ],
                      "handle": [
                        {
                          "handler": "subroute",
                          "routes": [
                            {
                              "match": [
                                {
                                  "path": ["*"]
                                }
                              ],
                              "handle": [
                                {
                                  "handler": "reverse_proxy",
                                  "upstreams": [
                                    {
                                      "dial": "cabotWeb:5000"
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "tls": {
      "certificates": {
        "load_folders": ["/TLS"]
      }
    }
  }
}
